<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Pr√≥ximos Eventos</h1>
    <a href="/events/new" class="btn btn-primary"><i class="fas fa-plus"></i> Criar Novo Evento</a>
</div>

<div class="row">
    {{#if events}}
        {{#each events}}
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text text-muted">
                        <i class="fas fa-calendar-alt"></i> {{formatDate this.eventDate 'DD/MM/YYYY'}} <br> <i class="fas fa-user-tie"></i> Organizado por: {{this.organizer.displayName}}
                    </p>
                    <a href="/events/{{this._id}}" class="btn btn-dark mt-auto">Ver Detalhes</a>
                </div>
            </div>
        </div>
        {{/each}}
    {{else}}
        <p class="text-center">Nenhum evento encontrado. Que tal <a href="/events/new">criar um</a>?</p>
    {{/if}}
</div>