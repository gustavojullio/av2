<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body shadow">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Registrar
            </h1>
            <form action="/auth/register" method="POST">
                <div class="form-group mb-3">
                    <label for="displayName" class="form-label">Nome de Exibição</label>
                    <input type="text" id="displayName" name="displayName" class="form-control"
                        placeholder="Como você quer ser chamado" value="{{displayName}}" required />
                </div>
                <div class="form-group mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Digite seu e-mail"
                        value="{{email}}" required />
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Senha</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Crie uma senha" value="{{password}}" required />
                </div>
                <div class="form-group mb-3">
                    <label for="password2" class="form-label">Confirmar Senha</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirme sua senha" value="{{password2}}" required />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Registrar</button>
                </div>
            </form>
            <p class="lead mt-4">Já tem uma conta? <a href="/auth/login">Faça Login</a></p>
        </div>
    </div>
</div>